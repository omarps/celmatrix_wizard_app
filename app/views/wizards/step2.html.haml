.container-fluid
  %h1 Step 2
  %p
    .btn-group{ :role => "group"}
      = link_to "Step 1", step1_wizard_path, class: 'btn btn-secondary'
      = link_to "Step 2", step2_wizard_path, class: 'btn btn-secondary'
      = link_to "Step 3", "#", class: 'btn btn-secondary disabled'
      = link_to "Step 4", "#", class: 'btn btn-secondary disabled'
      = link_to "Step 5", "#", class: 'btn btn-secondary disabled'
  %p= render partial: "step_progress", locals: { valuenow: "40" }
  .form-inputs
    = simple_form_for @user_wizard, as: :user_wizard, url: validate_step_wizard_path do |f|
      = f.error_notification
      = hidden_field_tag :current_step, 'step2'
      = f.input :email_address
      = f.submit 'Next', class: 'btn btn-success'
  %p= link_to "Back", root_path
