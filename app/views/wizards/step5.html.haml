.container-fluid
  %h1 Step 5
  - step = 'step5'
  %p= render partial: "step_buttongroup", locals: { current_step: step }
  %p= render partial: "step_progress", locals: { valuenow: "100" }
  %p Confirm that you want to save the User data?
  .form-inputs
    = simple_form_for @user_wizard, as: :user_wizard, url: validate_step_wizard_path do |f|
      = f.error_notification
      = hidden_field_tag :current_step, step
      = f.submit 'OK', class: 'btn btn-success'
  %p
  %p= link_to "Cancel", root_path, class: 'btn btn-danger'
